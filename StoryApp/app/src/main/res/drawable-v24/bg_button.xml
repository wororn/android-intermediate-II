
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <layer-list android:layout_width="match_parent" android:layout_height="wrap_content">
      <item android:left="3dp" android:state_pressed="true" android:top="3dp">
        <shape>
          <solid android:color="@color/grey_more_light" />
          <corners android:radius="10dp" />

        </shape>
      </item>
      <item android:bottom="3dp" android:right="3dp">
        <shape>
          <gradient android:angle="135" android:endColor="#C3E2E2E2" android:startColor="@color/grey_more_light" />
          <solid android:color="#68B9F8" />
          <stroke android:width="1dp" android:color="#68B9F8" />
          <corners android:radius="10dp" />
          <padding android:bottom="4dp" android:left="4dp" android:radius="4dp" android:right="4dp" android:top="4dp" />
        </shape>
      </item>
    </layer-list>
  </item>
</selector>